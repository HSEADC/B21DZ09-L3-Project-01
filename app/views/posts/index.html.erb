<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<%= link_to "New post", new_post_path %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
      <% if can? :manage, post %> 
  <%= link_to "Delete this post", post, data: {turbo_method: :delete}%>
<% end %>
    </p>
  <% end %>
</div>

