<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<p><%= link_to "New post", new_post_path, class: "manage_button"  %></p>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class: "manage_button"  %>
      <% if can? :manage, post %> 
  <%= link_to "Delete this post", post, class: "manage_button", data: {turbo_method: :delete}%>
<% end %>
    </p>
  <% end %>
</div>

