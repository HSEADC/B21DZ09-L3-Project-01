<div id="<%= dom_id post %>">
<% if post.post_image.present? %>
  <%= image_tag post.post_image.url, width: 100 %>
  <% end %>
  <p>
    <strong>Name:</strong>
    <%= post.name %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
